{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node" /* Ensure Node.js-style module resolution. */,
    "allowJs": true /* Allow JavaScript files to be included. */,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": ["*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
